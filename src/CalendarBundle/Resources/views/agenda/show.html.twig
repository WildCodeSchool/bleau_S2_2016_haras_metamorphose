{% extends '@Calendar/layout.html.twig' %}

{% block body %}

    <div class="container">
    <div class="row">
        <div class="col s12">

            <h1 class="center">Agenda</h1>

            <div id="table">

                <table class="calendar-table responsive-table">
                    <tr>
                        <td class="calendar-td calendar-border-topleft">
                            <p class="calendar-p">Titre de l'évènement :</p>
                        </td>
                        <td class="calendar-td-twig calendar-border-topright">
                            <p>{{ agenda.titre }}</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="calendar-td">
                            <p class="calendar-p">Date et heure de commencement :</p>
                        </td>
                        <td class="calendar-td-twig">
                            <p>{% if agenda.start %}{{ agenda.start|date('d-m-Y à H:i:s') }}{% endif %}</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="calendar-td">
                            <p class="calendar-p">Date et heure de fin :</p>
                        </td>
                        <td class="calendar-td-twig">
                            <p>{% if agenda.end %}{{ agenda.end|date('d-m-Y à H:i:s') }}{% endif %}</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="calendar-td">
                            <p class="calendar-p">Description de l'évènement</p>
                        </td>
                        <td class="calendar-td-twig">
                            <p>{{ agenda.texte }}</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="calendar-td">
                            <p class="calendar-p">Lieu de l'évènement</p>
                        </td>
                        <td class="calendar-td-twig">
                            <p>{{ agenda.lieu }}</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="calendar-td">
                            <p class="calendar-p">Ajouter au slider</p>
                        </td>
                        <td class="calendar-td-twig">
                            <p>{% if agenda.slider %}Evènement ajouté{% else %}Evènement non ajouté{% endif %}</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="calendar-td">
                            <p class="calendar-p">Couleur de l'évènement</p>
                        </td>
                        <td class="calendar-td-twig calendar-border-butomright" style="background-color: {{ agenda.color }};">
                            <p class="color-show-p">{{ agenda.color }}</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="calendar-td">
                            <p class="calendar-p">Image du slider</p>
                        </td>
                        <td class="calendar-td-twig calendar-border-butomright">
                            <img class="show-image" src="{{ asset(agenda.image.path) }}"  alt="{{ agenda.image.alt.translation('fr') }}">
                        </td>
                    </tr>
                </table>

            </div>
        </div>
    </div>

    <ul>
        <li>
            <div class="center">
                <a href="{{ path('agenda_edit', { 'id': agenda.id }) }}">
                    <i class="material-icons md-48 bouton-edit">create</i>
                </a>
                <a href="{{ path('plate_forme_homepage') }}">
                    <i class="material-icons md-48 bouton-retour">fast_rewind</i>
                </a>
            </div>
        </li>
    </ul>

    </div>
{% endblock %}
