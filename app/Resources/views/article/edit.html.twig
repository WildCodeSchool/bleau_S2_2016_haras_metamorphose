{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modifier l'article {{ article.name }}</h1>

    {{ form_start(edit_form) }}
        <div>
            Nom
            {{ form_errors(edit_form.name) }}
            {{ form_widget(edit_form.name) }}
        </div>
        <div>
            Page où est situé l'article
            {{ form_errors(edit_form.pages) }}
            {{ form_widget(edit_form.pages) }}
        </div>
    <div class="admin_content">
        <table>
            <th>
                Nom du titre de l'article
            </th>
            <td>
                {{ article.title }}
            </td>
            <td>
                <a href="{{ path('text_show', { 'id': article.title.id }) }}">Voir</a>
            </td>
            <td>
                <a href="{{ path('text_edit', { 'id': article.title.id }) }}">Editer</a>
            </td>
        </table>
    </div>
    <div class="admin_content">
        <table>
            <tr>
                <th>
                    Nom du contenu de l'article :
                </th>
                <td>
                    {{ article.content }}
                </td>
                <td>
                    <a href="{{ path('text_show', { 'id': article.content.id }) }}">Voir</a>
                </td>
                <td>
                    <a href="{{ path('text_edit', { 'id': article.content.id }) }}">Editer</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="admin_content">
        <table>
            <thead>
            <tr>
                <th>Nom des médias</th>
            </tr>
            </thead>
            <tbody>
            {% for media in article.medias %}
                <tr>
                    <td>
                        {{ media.name }}
                    </td>
                    <td>
                        <a href="{{ path('media_show', { 'id': media.id }) }}">Voir</a>
                    </td>
                    <td>
                        <a href="{{ path('media_edit', { 'id': media.id }) }}">Editer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div>
    <input type="submit" value="Modifier l'article" />
    {{ form_end(edit_form) }}
    </div>
    <div>
            <a href="{{ path('text_new') }}">
                <input type="submit" value="Ajouter un texte" />
            </a>
    </div>
    <div>
            <a href="{{ path('media_new') }}">
                <input type="submit" value="Ajouter un média" />
            </a>
    </div>

    <ul>
        <li>
            <a href="{{ path('article_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
