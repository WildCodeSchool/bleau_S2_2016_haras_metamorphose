{% extends '@Calendar/layout.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col s12 center">
                <h2>Edition de l'évènement</h2>
                <h4>{{ agenda.titre }}</h4>
            </div>
        </div>
    </div>

    <div class="container center">
        <div class="row">
            <div class="col s12">

                {{ form_start(edit_form) }}

                <div class="calendar-responsive-table">
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Titre de l'évènement :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(edit_form.titre, { 'attr': {'class': 'calendar-responsive-input'} }) }}
                            {{ form_errors(edit_form.titre) }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Date et heure de début :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(edit_form.start, { 'attr': {'class': 'calendar-responsive-input center'} }) }}
                            {{ form_errors(edit_form.start) }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Date et heure de fin :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(edit_form.end, { 'attr': {'class': 'calendar-responsive-input center'} }) }}
                            {{ form_errors(edit_form.end) }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Description de l'évènement :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(edit_form.texte, { 'id': 'textarea' }, { 'attr': {'col': '100'} }) }}
                            {{ form_errors(edit_form.texte) }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Lieu de l'évènemen :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(edit_form.lieu, { 'attr': {'class': 'calendar-responsive-input'} }) }}
                            {{ form_errors(edit_form.lieu) }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Couleur de l'évènement :</p>
                        </div>
                        <div class="col s12 m6 l6 valign-wrapper">
                            <div class="row valign-wrapper">
                                <div class="col s12 m6 l6 center">
                                        {{ form_widget(edit_form.color , { 'id': 'colorpicker' }) }}
                                        {{ form_errors(edit_form.color) }}
                                    <div  style="background-color: {{ agenda.color }};" class="col s12 m6 l6 center calendar-div-size"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Ajouter au slider :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(edit_form.slider, { 'id': 'test5' }, { 'attr': {'class': 'calendar-responsive-input'} }) }}
                            {{ form_errors(edit_form.slider) }}
                        </div>
                    </div>
                    <div class="row upload_file_event calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Ajouter une image (Max : 2Mo) :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(edit_form.image, { 'attr': {'class': 'calendar-responsive-input'} }) }}
                            {{ form_errors(edit_form.image) }}
                        </div>
                    </div>
                </div>

                <div class="center">
                    <button class="btn-floating btn-large waves-effect waves-light orange darken-1 modal-action modal-close"
                            type="submit">
                        <i class="material-icons">edit</i>
                    </button>

                    <a class="btn-floating btn-large waves-effect waves-light blue darken-1 modal-action modal-close"
                       href="{{ path('plate_forme_homepage') }}">
                        <i class="small material-icons">home</i>
                    </a>
                </div>

                {{ form_end(edit_form) }}

            </div>
        </div>
    </div>

{% endblock %}
