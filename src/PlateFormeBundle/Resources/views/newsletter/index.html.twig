{% extends '@PlateForme/layout.html.twig' %}

{% block body %}
    <style>
        .ContainerNL {
            flex: 1 0 auto;;
        }
    </style>

    <div class="ContainerNL row">
    <h1 class="center">Liste des newsletters</h1>

        {#-------------------------------------------------------------#}
        {# Mise en place message flash #}
        {% for flash_message in app.session.flashBag.get('notice') %}
            <div class="row container">
                <div class="flash-notice center">
                    {{ flash_message }}
                </div>
            </div>
        {% endfor %}
        {#-------------------------------------------------------------#}


        <table class="responsive-table bordered striped" id="table_NLindex">
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Objet</th>
                <th>Créée le :</th>
                <th>Envoyée le :</th>
                <th>Pièce jointe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

        {% for newsLetter in newsLetters %}
            <tr>
                <td>{{ newsLetter.libelle }}</td>
                <td>{{ newsLetter.objet|striptags|truncate(70, true, "...")|raw }}</td>
                <td>{% if newsLetter.dateCreation %}{{ newsLetter.dateCreation|date('d-m-Y') }}{% endif %}</td>
                {#<td>{% if newsLetter.etat %}Oui{% else %}Non{% endif %}</td>#}
                <td>{% if newsLetter.dateEnvoie %}{{ newsLetter.dateEnvoie|date('d-m-Y') }}{% else %} ----- {% endif %}</td>
                {#<td>{% if newsLetter.pj %}Oui{% else %}Non{% endif %}</td>#}
                <td>{{ newsLetter.filename }}</td>

                {# ACTIONS #}
                <td>
                    <div class="row center">
                        {# show #}
                        <a class="btn-floating btn-small waves-effect waves-light pink darken-3"
                           href="{{ path('newsletter_show', { 'id': newsLetter.id }) }}">
                            <i class="material-icons">input</i>
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                        {# edit #}
                        <a class="btn-floating btn-small waves-effect waves-light orange darken-3"
                           href="{{ path('newsletter_edit', { 'id': newsLetter.id }) }}">
                            <i class="material-icons">edit</i>
                        </a>
                        {# Envoi newsletter #}
                        {% if newsLetter.etat == true %}
                        {% else %}
                        <a class="btn-floating btn-small waves-effect waves-light lime accent-4"
                           href="{{ path('newsletter_send', {'id': newsLetter.id }) }}">
                            <i class="material-icons">email</i>
                        </a>
                        {% endif %}
                        {% endif %}
                    </div>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
    <div class="row center">
        <a class="btn-floating btn-medium waves-effect waves-light green darken-3"
           href="{{ path('newsletter_new') }}">
            <i class="material-icons">add</i>
        </a>
    </div>
    {% endif %}
</div>
{% endblock %}

