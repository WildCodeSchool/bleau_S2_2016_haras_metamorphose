{% extends '@Calendar/layout.html.twig' %}

{% block body %}

    <div class="container">
    <div class="row">
        <div class="col s12">

            <h1 class="center">Agenda</h1>

            <div id="table">

                <table class="show-table">
                    <tr>
                        <td class="show-td show-border-topright">
                            <p>Titre de l'évènement :</p>
                        </td>
                        <td class="show-td-twig">
                            <p>{{ agenda.titre }}</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="show-td">
                            <p>Date et heure de commencement :</p>
                        </td>
                        <td class="show-td-twig">
                            <p>{% if agenda.start %}{{ agenda.start|date('d-m-Y à H:i:s') }}{% endif %}</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="show-td">
                            <p>Date et heure de fin :</p>
                        </td>
                        <td class="show-td-twig">
                            <p>{% if agenda.end %}{{ agenda.end|date('d-m-Y à H:i:s') }}{% endif %}</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="show-td">
                            <p>Description de l'évènement</p>
                        </td>
                        <td class="show-td-twig">
                            <p>{{ agenda.texte }}</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="show-td">
                            <p>Lieu de l'évènement</p>
                        </td>
                        <td class="show-td-twig">
                            <p>{{ agenda.lieu }}</p>
                        </td>
                    </tr>
                    <tr>
                        <td class="show-td">
                            <p>Couleur de l'évènement</p>
                        </td>
                        <td class="show-td-twig" style="background-color: {{ agenda.color }};">
                            <p class="color-show-p">{{ agenda.color }}</p>
                        </td>
                    </tr>
                </table>

                {#<div>#}
                    {#<th>Slider</th>#}
                    {#<td>{% if agenda.slider %}Yes{% else %}No{% endif %}</td>#}
                {#</div>#}
            </div>
        </div>
    </div>

    <ul>
        <li>
            <div class="center">
                <a href="{{ path('agenda_edit', { 'id': agenda.id }) }}">
                    <i class="material-icons md-48 bouton-edit">create</i>
                </a>
                <a href="{{ path('plate_forme_homepage') }}">
                    <i class="material-icons md-48 bouton-retour">fast_rewind</i>
                </a>
            </div>
        </li>
        {#<li>#}
            {#{{ form_start(delete_form) }}#}
                {#<input type="submit" value="Delete">#}
            {#{{ form_end(delete_form) }}#}
        {#</li>#}
    </ul>

    </div>
{% endblock %}
