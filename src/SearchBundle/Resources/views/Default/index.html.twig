{% extends '@Calendar/layout.html.twig' %}

{% block body %}

    {# ---------------------- !FAIRE LA RECUP DES DONNEES DU SEARCH CONTROLLER ET LES AFFICHER! -------------------- #}

    <div class="container">
        <div class="row">
            <div class="col s12">
                <h3 class="center">Résultats de votre recherche.</h3>

                {% if app.session.flashBag.has('error') %}
                    <div class="alert alert-success">
                        {% for msg in app.session.flashBag.get('error') %}
                            {{ msg }}
                        {% endfor %}
                    </div>
                {% endif %}
                {% if app.session.flashBag.has('success') %}
                    <div class="alert alert-success">
                        {% for msg in app.session.flashBag.get('success') %}
                            {{ msg }}
                        {% endfor %}
                    </div>
                {% endif %}

            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col s12">

                <table class="calendar-table">
                    <theader>
                        <tr>
                            <td class="calendar-td calendar-border-topleft">
                                <p class="calendar-p center">
                                    Catégorie du post
                                </p>
                            </td>
                            <td class="calendar-td">
                                <p class="calendar-p center">
                                    Titre du post
                                </p>
                            </td>
                            <td class="calendar-td calendar-border-topright">
                                <p class="calendar-p center">
                                    Contenu du post
                                </p>
                            </td>
                        </tr>
                    </theader>
                    <tbody>

                    {% for resultat in resultats %}

                        <tr class="collection">
                            <td class="calendar-td-twig center">
                                {{ resultat.categorie.nom}}
                            </td>
                            <td class="calendar-td-twig center">
                                <a href="{{ path('post_showAllPost', { id: resultat.id }) }} " class="collection-item">
                                    {{ resultat.titre }}
                                </a>

                            </td>
                            <td class="calendar-td-twig center">
                                {{ resultat.contenu|raw }}
                            </td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>

            </div>
        </div>
    </div>


{% endblock %}
