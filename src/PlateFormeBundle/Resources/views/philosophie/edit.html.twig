{% extends '@PlateForme/layout.html.twig' %}

{% block body %}
<div class="container center" id="philosophiemodel">
    <h2>Philosophie edit</h2>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}

    <div class="boutons">
        <a href="{{ path('plate_forme_homepage') }}" title="Revenir à l'accueil">
            <span class="fa-stack fa-2x">
                <i class="fa fa-circle fa-stack-2x icon-background2"></i>
                <i class="fa fa-backward fa-stack-1x" aria-hidden="true"></i>
            </span>
        </a>
        {% if is_granted('ROLE_ADMIN') %}
            <button type="submit" value="Valider l'édition">
                    <span class="fa-stack fa-2x">
                      <i class="fa fa-circle fa-stack-2x icon-background2"></i>
                      <i class="fa fa-check fa-stack-1x"></i>
                    </span>
            </button>
        {% endif %}
    </div>

    {{ form_end(edit_form) }}

</div>
{% endblock %}
