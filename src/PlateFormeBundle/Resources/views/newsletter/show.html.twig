{% extends 'base.html.twig' %}

{% block body %}
    <h1>Newsletter</h1>

    <table>
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ newsLetter.libelle }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ newsLetter.objet|raw }}</td>
            </tr>
            <tr>
                <th>Créée le :</th>
                <td>{% if newsLetter.dateCreation %}{{ newsLetter.dateCreation|date('d-m-Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{% if newsLetter.etat %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Envoyée le :</th>
                <td>{% if newsLetter.dateEnvoie %}{{ newsLetter.dateEnvoie|date('d-m-Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Piéce jointe ?</th>
                <td>{% if newsLetter.pj %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Nom du fichier joint</th>
                <td>{{ newsLetter.filename }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row center">
        <a class="btn-floating btn-small waves-effect waves-light pink darken-3"
           href="{{ path('newsletter_index')}}">
            <i class="material-icons">home</i>
        </a>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn-floating btn-small waves-effect waves-light orange darken-3"
               href="{{ path('newsletter_edit', { 'id': newsLetter.id }) }}">
                <i class="material-icons">edit</i>
            </a>
            <a class="btn-floating btn-small waves-effect waves-light blue darken-1"
               href="{{ path('newsletter_delete', { 'id': newsLetter.id }) }}">
                <i class="small material-icons">delete</i>
            </a>

            {#<a href="{{ path('modele_delete', { 'id': modele.id }) }}" title="Effacer">
                <i class="material-icons contactme">delete</i>
            </a>#}
        {% endif %}
    </div>



{% endblock %}
