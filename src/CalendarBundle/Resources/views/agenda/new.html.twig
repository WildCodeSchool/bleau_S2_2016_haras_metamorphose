{% extends '@Calendar/layout.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col s12 center">
                <h2>Création d'un évènement</h2>
            </div>
        </div>
    </div>

    <div class="container center">
        <div class="row">
            <div class="col s12">

                {{ form_start(form) }}

                <div class="calendar-responsive-table">
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Titre de l'évènement :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(form.titre, { 'attr': {'class': 'calendar-responsive-input'} }) }}
                            {{ form_errors(form.titre) }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Date et heure de début :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(form.start, { 'attr': {'class': 'calendar-responsive-input center'} }) }}
                            {{ form_errors(form.start) }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Date et heure de fin :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(form.end, { 'attr': {'class': 'calendar-responsive-input center'} }) }}
                            {{ form_errors(form.end) }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Description de l'évènement :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(form.texte, { 'id': 'textarea' }, { 'attr': {'col': '100'} }) }}
                            {{ form_errors(form.texte) }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Lieu de l'évènemen :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(form.lieu, { 'attr': {'class': 'calendar-responsive-input'} }) }}
                            {{ form_errors(form.lieu) }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Couleur de l'évènement :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(form.color , { 'id': 'colorpicker' }) }}
                            {{ form_errors(form.color) }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Ajouter au slider :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(form.slider, { 'id': 'test5' }, { 'attr': {'class': 'calendar-responsive-input'} }) }}
                            {{ form_errors(form.slider) }}
                        </div>
                    </div>
                    <div class="row upload_file_event calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Ajouter une image (Max : 2Mo) :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {{ form_widget(form.image, { 'attr': {'class': 'calendar-responsive-input'} }) }}
                            {{ form_errors(form.image) }}
                        </div>
                    </div>
                    <div class="row upload_file_event calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Ajouter le lien d'une page :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {#{{ form_widget(form.lien, { 'id': 'textarea' }, { 'attr': {'col': '100'} }) }}#}
                            {#{{ form_errors(form.lien) }}#}
                            {{ form_widget(form.) }}
                        </div>
                    </div>
                </div>

                <div class="center">
                    <button class="btn-floating btn-large waves-effect waves-light green darken-1 modal-action modal-close"
                            type="submit">
                        <i class="material-icons">check</i>
                    </button>

                    <a class="btn-floating btn-large waves-effect waves-light blue darken-1 modal-action modal-close"
                       href="{{ path('plate_forme_homepage') }}">
                        <i class="small material-icons">home</i>
                    </a>
                </div>

                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock %}
