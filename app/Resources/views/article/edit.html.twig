{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modifier l'article {{ article.name }}</h1>

    {{ form_start(edit_form) }}
        <div>
            Nom
            {{ form_errors(edit_form.name) }}
            {{ form_widget(edit_form.name) }}
        </div>
        <div>
            Page où est situé l'article
            {{ form_errors(edit_form.pages) }}
            {{ form_widget(edit_form.pages) }}
        </div>
        <div>
            Titre
            {{ form_errors(edit_form.title) }}
            {{ form_widget(edit_form.title) }}
        </div>
        <div>
            Contenu
            {{ form_errors(edit_form.content) }}
            {{ form_widget(edit_form.content) }}
        </div>
        <div>
            Médias
            {{ form_errors(edit_form.medias) }}
            {{ form_widget(edit_form.medias) }}
        </div>

    <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}
    <div>
            <a href="{{ path('text_new') }}">
                <input type="submit" value="Ajouter un texte" />
            </a>
    </div>
    <div>
            <a href="{{ path('media_new') }}">
                <input type="submit" value="Ajouter un média" />
            </a>
    </div>

    <ul>
        <li>
            <a href="{{ path('article_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
