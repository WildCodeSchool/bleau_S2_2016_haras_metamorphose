{% extends '@Haras/base.html.twig' %}

{% block materialize %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
{% endblock materialize %}

{% block body %}
<body id="template">
    <header id="_template_header">
      {{ render(controller('HarasBundle:Page:getPage', { 'name': 'header' })) }}
    </header>
    <div>
        <h1 class="title">{{ section1Name }}</h1>
    </div>
    <div class="article">

        {% for article in articles %}
            <div class="article-block">
                    {% switch article.structure %}
                    {% case 'imageRight' %}
                        <table class='imageRight'>
                            <tr>
                                <td>
                                    <h2>{{ article.title }}</h2>
                                    <p id="text-left">
                                        {{ article.content }}
                                    </p>
                                </td>
                                <td>
                                    <img id="image-right" src="{{ asset(article.medias[0].path) }}" alt="{{ article.medias[0].alt }}"/>
                                </td>
                            </tr>
                        </table>
                    {% case 'imageLeft' %}
                        <table class='imageLeft'>
                            <tr>
                                <td>
                                    <img id="image-left" src="{{ asset(article.medias[0].path) }}" alt="{{ article.medias[0].alt }}"/>
                                </td>
                                <td>
                                    <h2>{{ article.title }}</h2>
                                    <p id="text-right">
                                        {{ article.content }}
                                    </p>
                                </td>
                            </tr>
                        </table>
                    {% case 'video' %}
                    <div class="video">
                        <video src="{{ asset(article.medias[0].path) }}"></video>
                        <h2>{{ article.title }}</h2>
                        <p id="text-video">
                            {{ article.content }}
                        </p>
                    </div>
                    {% case 'slider' %}
                    <div class="slider carousel">
                        {% for image in slider.medias %}
                            <img class="carousel-item" src="{{ asset(image.path) }}" alt="{{ image.alt }}">
                        {% endfor %}
                    </div>
                    {% endswitch %}
                </table>
            </div>
        {% endfor %}
    </div>

   {{ render(controller('HarasBundle:Page:getPage', { 'name': 'footer' })) }}



{% endblock body %}
{% javascripts %}
    {{ parent() }}

    $(document).ready(function(){
        $('.carousel').carousel();
    });
{% endblock javascripts %}