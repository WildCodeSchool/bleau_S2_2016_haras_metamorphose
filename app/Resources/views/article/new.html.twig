{% extends '@Haras/base.html.twig' %}

{% block materialize %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            Materialize.updateTextFields();
            $('select').material_select();
        });
    </script>
{% endblock materialize %}

{% block body %}
{{ dump(form.title) }}
<body id="_admin">
<div class="container">
    <div class="cadre">
        <div class="row">
            <h1 class="admin_title">Create new article</h1>
            {{ form_start(form) }}
            {% if form.title is defined %}
            <div class="row">
                <div class="col s12">
                    <p>Article title</p>
                    <div class="input-field inline">
                        <select>
                            <option value=
                                    {{ form_errors(form.title) }}
                                    {{ form_widget(form.title) }}
                                    </option>
                        </select>
                    </div>
                </div>
            </div>
            {{ form_widget(form.title) }}
            {% endif %}
            {% if form.content is defined %}
            <div class="row">
                <div class="col s12">
                    <p>Article content</p>
                    <div class="input-field inline">
                        <select>
                            <option value=
                                    {{ form_errors(form.content) }}
                                    {{ form_widget(form.content) }}
                                    </option>
                        </select>
                    </div>
                </div>
            </div>
            {% endif %}
            <div class="row">
                <form action="#">
                    <p>MÃ©dias
                        {{ form_errors(form.medias) }}
                        {{ form_widget(form.medias) }}
                        <input type="checkbox" id="medias"/>
                    </p>
                </form>
            </div>
            <div class="admin_button col s3">
                <input class="waves-effect waves-light btn" type="submit" value="Create article"/>
            </div>
            {{ form_end(form) }}
            <div class="admin_button col s3">
                <a class="waves-effect waves-light btn" href="{{ path('article_index') }}"></a>
            </div>
        </div>
    </div>
</div>
</body>

{% endblock %}
