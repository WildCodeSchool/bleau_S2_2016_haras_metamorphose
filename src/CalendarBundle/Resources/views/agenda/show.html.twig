{% extends '@Calendar/layout.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col s12 center">
                <h2>Affichage de l'évènement</h2>
                <h4>{{ agenda.titre }}</h4>
            </div>
        </div>
    </div>

    <div class="container center">
        <div class="row">
            <div class="col s12">

                <div class="calendar-responsive-table">
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Titre de l'évènement :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {#{{ agenda.titre, { 'attr': {'class': 'calendar-responsive-input'} } }}#}
                            {{ agenda.titre }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Date et heure de début :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {#{{ agenda.start, { 'attr': {'class': 'calendar-responsive-input center'} } }}#}
                            {{ agenda.start }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Date et heure de fin :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {#{{ agenda.end, { 'attr': {'class': 'calendar-responsive-input center'} } }}#}
                            {{ agenda.end }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Description de l'évènement :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {#{{ agenda.texte, { 'id': 'textarea' }, { 'attr': {'col': '100'} } }}#}
                            {{ agenda.texte }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Lieu de l'évènemen :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            {#{{ agenda.lieu, { 'attr': {'class': 'calendar-responsive-input'} } }}#}
                            {{ agenda.lieu }}
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Couleur de l'évènement :</p>
                        </div>
                            <div  style="background-color: {{ agenda.color }};" class="col s12 m6 l6 center calendar-div-size">
                                {{ agenda.color }}
                            </div>
                        </div>
                    </div>
                    <div class="row calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Ajouter au slider :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            <p class="calendar-p valign">{% if agenda.slider %}Evènement ajouté{% else %}Evènement non ajouté{% endif %}</p>
                        </div>
                    </div>
                    <div class="row upload_file_event calendar-row valign-wrapper">
                        <div class="col s12 m6 l6 calendar-td valign-wrapper">
                            <p class="calendar-p valign">Ajouter une image (Max : 2Mo) :</p>
                        </div>
                        <div class="col s12 m6 l6">
                            <img class="show-image" src="{{ asset(agenda.image.path) }}"  alt="{{ agenda.image.alt.translation('fr') }}">
                        </div>
                    </div>
                </div>

                <ul>
                    <li>
                        <div class="center">
                            <a href="{{ path('agenda_edit', { 'id': agenda.id }) }}">
                                <i class="material-icons md-48 bouton-edit">create</i>
                            </a>
                            <a href="{{ path('plate_forme_homepage') }}">
                                <i class="material-icons md-48 bouton-retour">fast_rewind</i>
                            </a>
                        </div>
                    </li>
                </ul>


            </div>
        </div>
    </div>
{% endblock %}
