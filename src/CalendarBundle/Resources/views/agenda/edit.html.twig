{% extends '@Calendar/layout.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col s12 center">
                <h1>Agenda edit</h1>
            </div>
        </div>
    </div>

    {{ form_start(edit_form) }}

    <div class="container center">
        <div class="row">
            <div class="col s12">

                <div id="caledar-new-table">

                    <table class="calendar-table responsive-table">
                        <tr>
                            <td class="calendar-td calendar-border-topleft">
                                <p class="calendar-p">Titre de l'évènement :<span class="asterix">*</span></p>
                            </td>
                            <td class="calendar-td-twig calendar-border-topright">
                                {{ form_widget(edit_form.titre, { 'attr': {'class': 'new-input'} }) }}
                                {{ form_errors(edit_form.titre) }}
                            </td>
                        </tr>
                        <tr>
                            <td class="calendar-td">
                                <p class="calendar-p">Date et heure de commencement :<span class="asterix">*</span></p>
                            </td>
                            <td class="calendar-td-twig">
                                <div class="col s12 m4 l4">
                                    {{ form_widget(edit_form.start) }}
                                    {{ form_errors(edit_form.start) }}
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="calendar-td">
                                <p class="calendar-p">Date et heure de fin :<span class="asterix">*</span></p>
                            </td>
                            <td class="calendar-td-twig">
                                <div class="col s12 m4 l4">
                                    {{ form_widget(edit_form.end) }}
                                    {{ form_errors(edit_form.end) }}
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="calendar-td">
                                <p class="calendar-p">Description de l'évènement :<span class="asterix">*</span></p>
                            </td>
                            <td class="calendar-td-twig">
                                {{ form_widget(edit_form.texte, { 'id': 'textarea' }) }}
                                {{ form_errors(edit_form.texte) }}
                            </td>
                        </tr>
                        <tr>
                            <td class="calendar-td">
                                <p class="calendar-p">Lieu de l'évènement :<span class="asterix">*</span></p>
                            </td>
                            <td class="calendar-td-twig">
                                {{ form_widget(edit_form.lieu, { 'attr': {'class': 'new-input'} }) }}
                                {{ form_errors(edit_form.lieu) }}
                            </td>
                        </tr>
                        <tr>
                            <td class="calendar-td">
                                <p class="calendar-p">Couleur de l'évènement :<span class="asterix">*</span></p>
                            </td>
                            <td class="calendar-td-twig calendar-border-butomright" style="background-color: {{ agenda.color }};">
                                {{ form_widget(edit_form.color, { 'id': 'colorpicker' }) }}
                                {{ form_errors(edit_form.color) }}
                            </td>
                        </tr>
                        <tr>
                            <td class="calendar-td">
                                <p class="calendar-p">Ajouter au slider :<span class="asterix">*</span></p>
                            </td>
                            <td class="calendar-td-twig">
                                {{ form_widget(edit_form.slider, { 'id': 'test5' }) }}
                                {{ form_errors(edit_form.slider) }}
                            </td>
                        </tr>
                        <tr class="upload_file_event">
                            <td class="calendar-td">
                                <p class="calendar-p">Ajouter une image (Max : 2Mo) :<span class="asterix">*</span></p>
                            </td>
                            <td class="calendar-td-twig calendar-border-butomright">
                                {{ form_widget(edit_form.image) }}
                                {{ form_errors(edit_form.image) }}
                            </td>
                        </tr>
                    </table>

                </div>
            </div>
        </div>
    </div>

    <div class="center">
        <button id="bouton-background" type="submit" value=""><i class="material-icons md-48 bouton-edit">create</i></button>

        <a href="{{ path('plate_forme_homepage') }}">
            <i class="material-icons md-48 bouton-retour">fast_rewind</i>
        </a>
    </div>

    {{ form_end(edit_form) }}

{% endblock %}
