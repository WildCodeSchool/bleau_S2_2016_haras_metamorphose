{% extends '@Haras/base.html.twig' %}

{% block materialize %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">
    <!-- Compiled and minified JavaScript -->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            Materialize.updateTextFields();
            $('select').material_select();
        });
    </script>
{% endblock materialize %}

{% block body %}
    <body id="_admin">
    <div class="container">
        <div class="cadre">
            <div class="row">
                <h1 class="admin_title">Create a new text</h1>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col m12">
                        Name
                        <div class="input-field inline text_area">
                                {{ form_errors(form.name) }}
                                {{ form_widget(form.name) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col m12">
                        French text
                        <div class="input-field inline text_area">
                            <p>
                                {{ form_errors(form.textFr) }}
                                {{ form_widget(form.textFr) }}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        English text
                        <div class="input-field inline text_area">
                            <p>
                                {{ form_errors(form.textEn) }}
                                {{ form_widget(form.textEn) }}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class=" inline">
                            <p>
                                Linked article
                                {% for text in text.articlesTitle %}
                                    {{ title }}
                                {% endfor %}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="admin_button col m3">
                        <a class="waves-effect waves-light btn">
                            <input type="submit" value="Create"/>
                            {{ form_end(form) }}
                        </a>
                    </div>

                    <div class="admin_button col m3">
                        <a class="waves-effect waves-light btn" href="{{ path('text_index') }}">
                            <input type="submit" value="Texts list">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
{% endblock %}
