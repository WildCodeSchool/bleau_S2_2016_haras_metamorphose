{% extends 'base.html.twig' %}

{% block body %}*    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    <script>
        $(document).ready(function() {
            Materialize.updateTextFields();
            $('select').material_select();
        });
    </script>
    <h1>Modification du texte {{ text.name }}</h1>

    <div class="admin_content">
    {{ form_start(edit_form) }}
        <div class="row">
            <div class="col s12">
                Nom
                <div class="input-field inline">
                    {{ form_errors(edit_form.name) }}
                    {{ form_widget(edit_form.name) }}
                    <label for="nom" data-error="wrong" data-success="right">
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                Texte en fran√ßais
                {{ form_errors(edit_form.textFr) }}
                {{ form_widget(edit_form.textFr) }}
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                Texte en anglais
                {{ form_errors(edit_form.textEn) }}
                {{ form_widget(edit_form.textEn) }}
            </div>
        </div>
        <input type="submit" value="Valider" />
    {{ form_end(edit_form) }}
    </div>
    <div class="admin_button">
        {{ form_start(delete_form) }}
        <input type="submit" value="Supprimer">
        {{ form_end(delete_form) }}
    </div>
    <div class="admin_button">
        <a href="{{ path('text_index') }}">
            <input type="submit" value="Liste des textes">
        </a>
     </div>
{% endblock %}
