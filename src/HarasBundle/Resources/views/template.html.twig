{% extends '@Haras/base.html.twig' %}

{% block materialize %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
{% endblock materialize %}

{% block body %}
<body id="template">
    <header id="_template_header">
        {% include 'HarasBundle::header.html.twig' %}
    </header>
    <div>
        <h1 class="title">{#{{ section1Name }}#}</h1>
    </div>
    <div class="article">
        {% for article in articles %}
            <div class="article-block">
            {% if article.structure.name == 'imageRight' %}
                <table class='imageRight'>
                    <tr>
                        <td>
                            <h2>{{ article.title }}</h2>
                            <p id="text-left">
                                {{ article.content }}
                            </p>
                        </td>
                        <td>
                            <img class="image-right" src="{{ asset(article.medias|first.path) }}" alt="{{ article.medias|first.alt }}"/>
                        </td>
                    </tr>
                </table>
            {% elseif article.structure.name == 'imageLeft' %}
                <table class='imageLeft'>
                    <tr>
                        <td>
                            <img class="image-left" src="{{ asset(article.medias|first.path) }}" alt="{{ article.medias|first.alt }}"/>
                        </td>
                        <td>
                            <h2>{{ article.title }}</h2>
                            <p class="text-right">
                                {{ article.content }}
                            </p>
                        </td>
                    </tr>
                </table>
            {% elseif article.structure.name == 'video' %}
                <div class="video">
                    <video src="{{ asset(article.medias[0].path) }}"></video>
                    <h2>{{ article.title }}</h2>
                    <p class="text-video">
                        {{ article.content }}
                    </p>
                </div>
            {% elseif article.structure.name == 'slider' %}
                <div class="slider carousel">
                    {% for image in article.medias %}
                        <img class="carousel-item" src="{{ asset(image.path) }}" alt="{{ image.alt }}">
                    {% endfor %}
                </div>
            {% endif %}
            </div>
        {% endfor %}
    </div>
    <ul class="navigation">
        <li><a href="{{ path('haras_get_page', {'name': page, 'pageNb' : 1}) }}">Début</a></li>
        <li><a href="{{ path('haras_get_page', {'name': page, 'pageNb' : pageNb-1}) }}">Précédent</a></li>
        <li><a href="{{ path('haras_get_page', {'name': page, 'pageNb' : pageNb+1}) }}">Suivant</a></li>
    <footer id="_template_footer"> 
        {% include 'HarasBundle::footer.html.twig' %}
     </footer>



{% endblock body %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $('.carousel').carousel();
        });
    </script>
{% endblock javascripts %}