{% extends '@PlateForme/layout.html.twig' %}

    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('bundles/calendar/css/materialize-colorpicker.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/calendar/css/calendar_main.css') }}">
    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('bundles/calendar/js/materialize-colorpicker.min.js') }}"></script>
        <script>
            $('#colorpicker').colorpicker({
                format: 'hex',
                color: 'transparent'
            });
        </script>
    {% endblock %}