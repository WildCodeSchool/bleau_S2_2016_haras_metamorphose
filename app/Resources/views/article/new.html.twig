{% extends '@Haras/base.html.twig' %}

{% block materialize %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            Materialize.updateTextFields();
            $('select').material_select();
        });
    </script>
{% endblock materialize %}

{% block body %}
<body id="_admin">
<nav class="nav">
    <div class="nav-wrapper">
        <ul>
            <li><a href="{{ path('page_index', { 'name': 'homepage' }) }}">Index</a></li>
            <li><a href="{{ path('article_new', { 'name': 'homepage' }) }}">New Article</a></li>
            <li><a href="{{ path('haras_get_page', {'name': 'homepage'}) }}">Homepage</a></li>
            <li><a class="background-color: blue" href="{{ path('fos_user_security_logout') }}">
                    {{ 'Logout'|trans({}, 'FOSUserBundle') }}
                </a>

            </li>
        </ul>
    </div>
</nav>
<div class="container">
    <div class="cadre">
        <div class="row">
            <h1 class="admin_title">Create new article</h1>
            {{ form_start(form) }}
            <div class="row">
                <div class="col s12">
                    Article structure
                    <div class="input-field inline">
                        <select>
                            <option value=
                                    {{ form_errors(form.structure) }}
                                    {{ form_widget(form.structure) }}
                                    </option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    Article location
                    <div class="input-field inline">
                        <select>
                            <option value=
                                    {{ form_errors(form.pages) }}
                                    {{ form_widget(form.pages) }}
                                    </option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    Article title
                    <div class="input-field inline">
                        <select>
                            <option value=
                                    {{ form_errors(form.title) }}
                                    {{ form_widget(form.title) }}
                                    </option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    Article content
                    <div class="input-field inline">
                        <select>
                            <option value=
                                    {{ form_errors(form.content) }}
                                    {{ form_widget(form.content) }}
                                    </option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <form action="#">
                    <p>MÃ©dias
                        {{ form_errors(form.medias) }}
                        {{ form_widget(form.medias) }}
                        <input type="checkbox" id="medias"/>
                        <label for="medias"></label>
                    </p>
                </form>
            </div>
            <div class="admin_button col m3">
                <a class="waves-effect waves-light btn" href="{{ path('article_new') }}">
                    <input type="submit" value="Create article"/>
                </a>
            </div>
            {{ form_end(form) }}
            <div class="admin_button col m3">
                <a class="waves-effect waves-light btn" href="{{ path('page_index', { 'name': 'homepage' }) }}">
                    <input type="submit" value="Return to index"/>
                </a>
            </div>
        </div>
    </div>
</div>
</body>

{% endblock %}
