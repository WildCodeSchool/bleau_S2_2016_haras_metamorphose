{% extends '@Haras/base.html.twig' %}
{% block materialize %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
{% endblock materialize %}

{% block body %}
    <body id="_admin">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    <script>
        $(document).ready(function() {
            Materialize.updateTextFields();
            $('select').material_select();
        });
    </script>
    <h1>Edition de la page {{ page.name }}</h1>
    <div class="admin_list">
        {{ form_start(edit_form) }}
            <div class="row">
                <div class="col s12">
                    Nom
                    <div class="input-field inline">
                        {{ form_errors(edit_form.name) }}
                        {{ form_widget(edit_form.name) }}
                        <label for="nom" data-error="wrong" data-success="right">
                        </label>
                    </div>
                </div>
            </div>
        <div class="input-field inline col s12">
            Articles
            <select>
                <option value=
                    {{ form_errors(edit_form.articles) }}
                    {{ form_widget(edit_form.articles) }}
                        </option>
            </select>
        </div>
    </div>
    <div class="admin_button">
        <a href="{{ path('page_show', { 'name': page.name }) }}">
            <input type="submit" value="Valider les modifications de la page" />
        </a>
    </div>
    {{ form_end(edit_form) }}
    <div class="admin_button">
        <a href="{{ path('article_new') }}">
            <input type="submit" value="Ajouter un article" />
        </a>
    </div>
    <div class="admin_button">
        <a href="{{ path('page_index') }}">
            <input type="submit" value="Retour Ã  la liste des pages">
        </a>
    </div>
    </body>
{% endblock %}
