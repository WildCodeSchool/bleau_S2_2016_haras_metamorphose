{% extends '@Haras/base.html.twig' %}

{% block materialize %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
{% endblock materialize %}

{% block body %}
<body id="_admin">
<nav class="nav">
    <div class="nav-wrapper">
        <ul>
            <li><a href="{{ path('page_index', { 'name': 'homepage' }) }}">Index</a></li>
            <li><a href="{{ path('article_new', { 'name': 'homepage' }) }}">New Article</a></li>
            <li><a href="{{ path('haras_get_page', {'name': 'homepage'}) }}">Homepage</a></li>
            <li><a class="background-color: blue" href="{{ path('fos_user_security_logout') }}">
                    {{ 'Logout'|trans({}, 'FOSUserBundle') }}
                </a>
            </li>
        </ul>
    </div>
</nav>
    <div class="container">
        <div class="row">
            <div class="cadre">
                <h1 class="admin_title">Media</h1>
                <table>
                    <tbody>
                        <tr>
                            <th>Name</th>
                            <td>{{ medium.name }}</td>
                        </tr>
                        <tr>
                            <th>Preview</th>
                            <td><img class="image_preview" src="{{ asset(medium.path) }}" alt="{{ medium.alt }}"></td>
                        </tr>
                    </tbody>
                </table>
                    <div class="row">
                        <div class="admin_button col m6">
                            <a class="waves-effect waves-light btn" href="{{ path('media_edit', { 'id': medium.id }) }}">Edit</a>
                        </div>
                        {{ form_start(delete_form) }}
                        <div class="admin_button col m6">
                            <input class="waves-effect waves-light btn delete" type="submit" value="Delete">
                        </div>
                        {{ form_end(delete_form) }}
                    </div>
                    <div class="row">
                        <div class="admin_button col m12">
                            <a class="waves-effect waves-light btn" href="{{ path('media_index') }}">Back to the list</a>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</body>
{% endblock %}
