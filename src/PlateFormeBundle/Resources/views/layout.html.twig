{% extends '@PlateForme/Default/basePlateforme.html.twig' %}

{% block header %}
    <header>
        <!-- Dropdown Structure -->
        <div class="navbar-fixed">
            <nav>
                <div class="nav-wrapper-plateforme">

                    <ul class="left">
                        <li>
                            <a class="plateforme-logo" href="{{ path('plate_forme_homepage') }}">
                                <img id="plateforme-logo" src="{{ asset('bundles/haras/images/logo.png') }}" alt="logo">
                            </a>
                        </li>


                        {#Icons gauche admin / moderateur navbar1 visibles en mode medium à large#}
                        <li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="hide-on-small-and-down">
                                    <a class="btn-floating btn-large icon-background5 waves-effect tooltipped"
                                       href="{{ path('admin_dashboard') }}"
                                       data-position="bottom"
                                       data-delay="50"
                                       data-tooltip="Tableau de bord">
                                        <i class="medium material-icons">dashboard</i>
                                    </a>
                                    <span class="adminlog">
                                    {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                                    </span>
                                </div>

                            {% elseif is_granted('ROLE_MODERATEUR') %}
                                <div class="hide-on-small-and-down">
                                    <a class="btn-floating btn-large icon-background5 waves-effect tooltipped"
                                       href="{{ path('categorieplateforme_index') }}"
                                       data-position="bottom"
                                       data-delay="50"
                                       data-tooltip="Moderation">
                                        <i class="medium material-icons">dashboard</i>
                                    </a>
                                    <span class="moderateur.log">
                                    {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                                    </span>
                                </div>
                            {% endif %}
                        </li>
                    </ul>
                </div>

                {#Icons colorés navbar1 à droite visibles en mode medium à large#}
                <div class="hide-on-small-and-down">
                    <ul class="right">
                        <li>
                            <a class="btn-floating btn-large icon-background1 waves-effect tooltipped"
                               href="{{ path('newsletter_index') }}"
                               data-position="bottom"
                               data-delay="50"
                               data-tooltip="Newsletter">
                                <i class="material-icons">description</i>
                            </a>
                        </li>

                        <li>
                            <a class="btn-floating btn-large icon-background2 waves-effect tooltipped"
                               href="{{ path('post_index') }}"
                               data-position="bottom"
                               data-delay="50"
                               data-tooltip="Forum">
                                <i class="material-icons">mode_edit</i>
                            </a>
                        </li>

                        <li>
                            <a class="btn-floating btn-large icon-background3 waves-effect tooltipped"
                               href="{{ path('agenda') }}"
                               data-position="bottom"
                               data-delay="50"
                               data-tooltip="Agenda">
                                <i class="material-icons">date_range</i>
                            </a>
                        </li>

                        <li>
                            <a class="btn-floating btn-large icon-background4 waves-effect tooltipped"
                               href="{{ path('fos_user_profile_show') }}"
                               data-activates="dropdown2"
                               data-position="bottom"
                               data-delay="50"
                               data-tooltip="Profil">
                                <i class="material-icons">account_box</i>
                            </a>
                        </li>
                        <ul id="dropdown2" class="dropdown-content">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <li><a href="{{ path('fos_user_profile_show') }}">Voir mon profil</a></li>
                                <li><a href="{{ path('fos_user_security_logout') }}">Se deconnecter</a></li>
                            {% else %}
                                <li><a href="{{ path('fos_user_registration_register') }}">Créer un compte</a></li>
                                <li><a href="{{ path('fos_user_security_login') }}">Se connecter</a></li>
                            {% endif %}
                        </ul>
                    </ul>
                </div>

                {#Button Horizontal FAB pour navbar 1 visibles en mode mobile#}
                <div class="fixed-action-btn horizontal hide-on-med-and-up">
                    <a class="btn-floating btn-large icon-background6 waves-effect action">
                        <i class="large material-icons">menu</i>
                    </a>
                    <ul>
                        <li>
                            {% if is_granted('ROLE_ADMIN') %}
                                {#<div class="hide-on-small-and-down">#}
                                <a class="btn-floating btn-large icon-background5 waves-effect action tooltipped"
                                   href="{{ path('admin_dashboard') }}"
                                   data-position="bottom"
                                   data-delay="50"
                                   data-tooltip="Tableau de bord">
                                    <i class="medium material-icons">dashboard</i>
                                </a>
                                {#</div>#}

                            {% elseif is_granted('ROLE_MODERATEUR') %}
                                {#<div class="hide-on-small-and-down">#}
                                <a class="btn-floating btn-large icon-background5 waves-effect action tooltipped"
                                   href="{{ path('categorieplateforme_index') }}"
                                   data-position="bottom"
                                   data-delay="50"
                                   data-tooltip="Moderation">
                                    <i class="medium material-icons">dashboard</i>
                                </a>
                                {#</div>#}
                            {% endif %}
                        </li>

                        <li>
                            <a class="btn-floating btn-large icon-background1 waves-effect action tooltipped"
                               href="{{ path('newsletter_index') }}"
                               data-position="bottom"
                               data-delay="50"
                               data-tooltip="Newsletter">
                                <i class="material-icons">description</i>
                            </a>
                        </li>

                        <li>
                            <a class="btn-floating btn-large icon-background2 waves-effect action tooltipped"
                               href="{{ path('post_index') }}"
                               data-position="bottom"
                               data-delay="50"
                               data-tooltip="Forum">
                                <i class="material-icons">mode_edit</i>
                            </a>
                        </li>

                        <li>
                            <a class="btn-floating btn-large icon-background3 waves-effect action tooltipped"
                               href="{{ path('agenda') }}"
                               data-position="bottom"
                               data-delay="50"
                               data-tooltip="Agenda">
                                <i class="material-icons">date_range</i>
                            </a>
                        </li>

                        <li>
                            <a class="btn-floating btn-large icon-background4 waves-effect action tooltipped"
                               href="{{ path('fos_user_profile_show') }}"
                               data-activates="dropdown2"
                               data-position="bottom"
                               data-delay="50"
                               data-tooltip="Profil">
                                <i class="material-icons">account_box</i>
                            </a>
                        </li>
                        <ul id="dropdown2" class="dropdown-content">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <li><a href="{{ path('fos_user_profile_show') }}">Voir mon profil</a></li>
                                <li><a href="{{ path('fos_user_security_logout') }}">Se deconnecter</a></li>
                            {% else %}
                                <li><a href="{{ path('fos_user_registration_register') }}">Créer un compte</a></li>
                                <li><a href="{{ path('fos_user_security_login') }}">Se connecter</a></li>
                            {% endif %}
                        </ul>
                    </ul>
                </div>


            </nav>
        </div>
        
        <div class="navbar-fixed">
            <nav class="navbar2">
                <a href="#" data-activates="mobile-demo" class="button-collapse">
                    <i class="large material-icons grey-text text-darken-3">menu</i>
                </a>
                <ul class="left hide-on-med-and-down">
                    <li class="active philosophie"><a href="{{ path('philosophie_show') }}">Notre philosophie</a></li>
                    <li class="decouverte"><a href="{{ path('post_index') }}">Découverte</a></li>
                    <li class="haras"><a href="{{ path('post_index') }}">Le haras</a></li>
                    <li class="detente"><a href="{{ path('post_index') }}">Détente</a></li>
                    <li class="coworking"><a href="{{ path('post_index') }}">Espace de co-working</a></li>
                </ul>

                <ul class="side-nav" id="mobile-demo">
                    <li class="active philosophie"><a href="{{ path('philosophie_show') }}">Notre philosophie</a></li>
                    <li class="decouverte"><a href="{{ path('post_index') }}">Découverte</a></li>
                    <li class="haras"><a href="{{ path('post_index') }}">Le haras</a></li>
                    <li class="detente"><a href="{{ path('post_index') }}">Détente</a></li>
                    <li class="coworking"><a href="{{ path('post_index') }}">Espace de co-working</a></li>
                    <li>
                        <form action="{{ path('plate_forme_searchController') }}" method="Post">
                            <div class="input-field">
                                <input name="requete" id="search" type="search" required>
                                <label for="search">
                                    <i class="material-icons" id="search-burger">search</i>
                                </label>
                            </div>
                        </form>
                    </li>
                </ul>

                <ul class="right hide-on-med-and-down">
                    <li>
                        <form action="{{ path('plate_forme_searchController') }}" method="Post">
                            <div class="input-field">
                                <input name="requete" id="search" type="search" required>
                                <label for="search">
                                    <i class="material-icons">search</i>
                                </label>
                            </div>
                        </form>
                    </li>
                </ul>

            </nav>
        </div>
    </header>
{% endblock %}

{# --------------------------------------------------------------------- #}

{% block footer %}
    <footer class="page-footer">
        <div class="container">
            <div class="row">
                <div class="col l4 s12">
                    <h5 class="white-text">A propos</h5>
                       {{ render(controller('PlateFormeBundle:Philosophie:index')) }}
                </div>
                <div class="col l2 offset-l1 s12">
                    <h5 class="white-text">Contactez nous</h5>
                    <ul>
                        <li>
                            <a class="grey-text text-lighten-3" href="mailto:toto@gmail.com?subject=Forum Haras de la métamorphose.&cc=toto@gmail.com&body=Entrer votre message.">Email</a>
                        </li>
                        <!-- Cross-platform compatible (Android + iPhone) -->
                        <li>
                            <a class="grey-text text-lighten-3" href="tel://+33600000000">Téléphone</a>
                        </li>

                        <li>
                            <a href="#"><img class="icone" src="{{ asset('bundles/calendar/images-colorpicker/facebook.png') }}" alt="facebook"></a>
                            <a href="#"><img class="icone" src="{{ asset('bundles/calendar/images-colorpicker/twitter.png') }}" alt="twitter"></a>
                        </li>
                    </ul>
                </div>
                <div class="col l3 offset-l1 s12">
                    <h5 class="white-text">Newsletter</h5>
                    <div class="row">
                        <form action="{{ path('abonnement_newsletter') }}" method="post">
                            <div class="col s12 m10 l10">
                                <input name="email" placeholder="Saisir adresse email" required="required" type="email">
                            </div>
                            <div class="col s2 m2 l2">
                                <input class="waves-effect waves-light btn" value="valider" type="submit">
                            </div>
                            <label for="email" data-error="wrong" data-success="right"></label>
                        </form>
                    </div>
                    <a class="grey-text text-lighten-3"
                       href="{{ path('desabonnement_newsletter') }}">
                        Désabonnement
                    </a>
                </div>

            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © 2017 Haras de la metamorphose
            </div>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script>

        $( document ).ready(function() {
            $(".button-collapse").sideNav();
        });
    </script>

{% endblock %}