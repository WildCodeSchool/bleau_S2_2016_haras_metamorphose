{% extends '@Haras/base.html.twig' %}

{% block materialize %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            Materialize.updateTextFields();
            $('select').material_select();
        });
    </script>
{% endblock materialize %}

{% block body %}
<body id="_admin">
<nav class="nav">
    <div class="nav-wrapper">
        <ul>
            <li><a href="{{ path('page_index', { 'name': 'homepage' }) }}">Index</a></li>
            <li><a href="{{ path('article_new', { 'name': 'homepage' }) }}">New Article</a></li>
            <li><a href="{{ path('haras_get_page', {'name': 'homepage'}) }}">Homepage</a></li>
            <li><a class="background-color: blue" href="{{ path('fos_user_security_logout') }}">
                    {{ 'Logout'|trans({}, 'FOSUserBundle') }}
                </a>

            </li>
        </ul>
    </div>
</nav>
<div class="container">
    <div class="cadre">
        <div class="row">
            <h1 class="admin_title">Liste des textes</h1>
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Texte en Français</th>
                            <th>English text</th>
                            <th>Pages</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for text in texts %}
                        <tr>
                            <td>{{ text.name }}</td>
                            <td>{{ text.textFr }}</td>
                            <td>{{ text.textEn }}</td>
                            <td>
                                {% for page in text.pages %}
                                    {{ page }}
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('text_show', { 'id': text.id }) }}">Voir</a>
                            </td>
                            <td>
                                <a href="{{ path('text_edit', { 'id': text.id }) }}">Editer</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                    <div class="admin_button col s12">
                        <a class="waves-effect waves-light btn" href="{{ path('text_new') }}">
                            <input type="submit" value="Créer un nouveau texte">
                        </a>
                    </div>
                </div>
        </div>
    </div>
</div>
</body>
{% endblock %}
