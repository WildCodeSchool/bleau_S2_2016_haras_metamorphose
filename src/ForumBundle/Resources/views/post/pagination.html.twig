{% if pageCount > 1 %}
    <ul class="pagination">
        {% if previous is defined %}
                 <li class="arrow">
                     <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                         <i class="fa fa-step-backward fa-lg " aria-hidden="true"></i>
                     </a>
                 </li>
        {% else %}
            <li class="arrow unavailable">
                <a>
                    <i class="fa fa-step-backward fa-lg" aria-hidden="true"></i>
                </a>
            </li>
        {% endif %}

        {% if startPage > 1 %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
            </li>
            {% if startPage == 3 %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
                </li>
            {% elseif startPage != 2 %}
                <li class="unavailable">
                    <a>&hellip;</a>
                </li>
            {% endif %}
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">
                        {{ page }}
                    </a>
                </li>
            {% else %}
                <li class="current">
                    <a>{{ page }}</a>
                </li>
            {% endif %}

        {% endfor %}

        {% if pageCount > endPage %}
            {% if pageCount > (endPage + 1) %}
                {% if pageCount > (endPage + 2) %}
                    <li class="unavailable">
                        <a>&hellip;</a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">
                            {{ pageCount -1 }}
                        </a>
                    </li>
                {% endif %}
            {% endif %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
            </li>
        {% endif %}

        {% if next is defined %}
            <li class="arrow">
                <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                    {#<i class="material-icons">chevron_right</i>#}
                    <i class="fa fa-step-backward fa-rotate-180" aria-hidden="true"></i>
                </a>
            </li>
        {% else %}
            <li class="arrow unavailable">
                <a>
                    {#<i class="material-icons">chevron_right</i>#}
                    <i class="fa fa-step-backward fa-rotate-180" aria-hidden="true"></i>
                </a>
            </li>
        {% endif %}
    </ul>
{% endif %}