{% extends '@Forum/layout.html.twig' %}

{% block body %}
<div class="catContainer postAdmin">
    <h1 class="center">Détail de la catégorie {{ categoriePlateforme.nom }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ categoriePlateforme.nom }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{% if categoriePlateforme.actif %}Oui{% else %}Non{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <div class="row center">
        <a class="btn-floating btn-large waves-effect waves-light green darken-1"
           href="{{ path('categorieplateforme_edit', { 'id': categoriePlateforme.id }) }}">
            <i class="small material-icons">edit</i>
        </a>
        <a class="btn-floating btn-large waves-effect waves-light blue darken-1"
           href="{{ path('categorieplateforme_index') }}">
            <i class="small material-icons">home</i>
        </a>
    </div>
</div>
{% endblock %}
